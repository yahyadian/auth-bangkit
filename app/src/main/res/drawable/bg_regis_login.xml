<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:drawable="@drawable/img_splash_screen" />

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerColor="@color/transparent_olivetone"
                android:centerX="0.0"
                android:angle="90"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:startColor="@color/brak_brown"
                android:centerX="0.0"
                android:angle="90"/>
        </shape>
    </item>

</layer-list>
